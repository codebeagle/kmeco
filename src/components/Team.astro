---
const {componentData} = Astro.props;
---
<section class="container">
  <div class="flex">
    <div class="col">
      <p set:html={componentData.eyebrow} class="eyebrow"></p>
      <h2 set:html={componentData.heading} class="heading-200"></h2>
    </div>
  </div>
  <div class="flex">
    <div class="col">
      {componentData.team.map((item) => 
        <div class="card">
          <img src={item.image.src} alt={item.image.altText}>
          <h3 class="heading-600">{item.firstName} {item.lastName}</h3>
          <p>{item.title}</p>
        </div>
      )}
    </div>
  </div>
</section>