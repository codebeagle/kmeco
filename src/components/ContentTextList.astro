---
const {componentData} = Astro.props;
---
<section class="container my-15">
  <div class="grid grid-cols-12 gap-5 items-center">
    <div set:html={componentData.content} class="col-start-2 col-span-5"></div>
    <ul class="list-disc col-start-7 col-span-5 flex flex-col gap-4">
      {componentData.list.map((item) => 
        <li class="heading-600">{item}</li>
      )}
    </ul>
  </div>
</section>