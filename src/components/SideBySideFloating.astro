---
const {componentData} = Astro.props;
---
<section class="container">
  <div class="flex">
    <div class="col">
      <img src={componentData.image.src} alt={componentData.image.altText}>
    </div>
    <div class="col">
      <p set:html={componentData.eyebrow} class="eyebrow"></p>
      <h2 set:html={componentData.heading} class="heading-200"></h2>
      <div set:html={componentData.content}></div>
      <a href={componentData.ctaLink}>{componentData.ctaLabel}</a>
    </div>
  </div>
</section>