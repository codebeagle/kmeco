---
import { Picture } from 'astro:assets';

const {componentData} = Astro.props;
const images = import.meta.glob('../images/*');
---
<section class="container grid grid-cols-12 gap-5 py-15">
  <div class="col-start-2 col-span-10 flex flex-row gap-5">
    <div class="flex flex-col gap-5">
      <div class="flex-1">
        <Picture class="object-cover object-center w-full h-full rounded-xl" src={images[componentData.images[0].src]()} formats={['avif','webp']} alt="" />
      </div>
      <div class="flex-1">
        <Picture class="object-cover object-center w-full h-full rounded-xl" src={images[componentData.images[1].src]()} formats={['avif','webp']} alt="" />
      </div>
    </div>
    <div class="flex flex-col gap-5">
      <div class="flex-1">
        <Picture class="object-cover object-center w-full h-full rounded-xl" src={images[componentData.images[2].src]()} formats={['avif','webp']} alt="" />
      </div>
      <div class="flex-1">
        <Picture class="object-cover object-center w-full h-full rounded-xl" src={images[componentData.images[3].src]()} formats={['avif','webp']} alt="" />
      </div>
      <div class="flex-1">
        <Picture class="object-cover object-center w-full h-full rounded-xl" src={images[componentData.images[4].src]()} formats={['avif','webp']} alt="" />
      </div>
    </div>
    <div class="flex flex-col gap-5">
      <div class="flex-1">
        <Picture class="object-cover object-center w-full h-full rounded-xl" src={images[componentData.images[5].src]()} formats={['avif','webp']} alt="" />
      </div>
      <div class="flex-1">
        <Picture class="object-cover object-center w-full h-full rounded-xl" src={images[componentData.images[6].src]()} formats={['avif','webp']} alt="" />
      </div>
    </div>
  </div>
</section>