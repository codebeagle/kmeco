---
import { Picture } from 'astro:assets';

const {componentData} = Astro.props;
const images = import.meta.glob('../images/*');
---
<section class="container py-25">
  <div class="grid grid-cols-12 gap-5 items-center">
    <div class="col-start-2 col-span-5 flex flex-col gap-5">
      <div class="pr-15">
        <Picture class="rounded-xl col-span-2" src={images[componentData.imageLarge.src]()} formats={['avif','webp']} alt="simple KMECO logo" />
      </div> 
      <div class="flex-1 flex flex-row justify-end gap-5 pr-4">
        <div class="flex-1 flex flex-col items-center justify-center bg-red rounded-xl text-white">
          <p class="heading-400">{componentData.stat.number}</p>
          <p>{componentData.stat.label}</p>
        </div>
        <Picture class="rounded-xl row-start-2 mt-[-120px] max-w-100 border-4 border-white" src={images[componentData.imageSmall.src]()} formats={['avif','webp']} alt="simple KMECO logo" />
      </div>
    </div>
    <div class="col-start-7 col-span-5 flex flex-col gap-6">
      <div class="flex flex-col gap-2">
        <p set:html={componentData.eyebrow} class="eyebrow"></p>
        <h2 set:html={componentData.heading} class="heading-200"></h2>
      </div>
      <div set:html={componentData.content}  class="content"></div>
      <ul class="list-disc">
        {componentData.list.map((item:string) => 
          <li><p>item</p></li>
        )}
      </ul>
      <a href={componentData.cta.ctaHref}>{componentData.cta.ctaLabel}</a>
    </div>
  </div>
</section>